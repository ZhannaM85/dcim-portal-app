{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ],
    "esModuleInterop": true,
    "paths": {
      "@angular/core/testing": ["./node_modules/@angular/core/types/testing.d.ts"],
      "@angular/core": ["./node_modules/@angular/core/types/core.d.ts"],
      "@angular/cdk/dialog": ["./node_modules/@angular/cdk/types/dialog.d.ts"],
      "@angular/cdk/portal": ["./node_modules/@angular/cdk/types/portal.d.ts"],
      "@angular/cdk/a11y": ["./node_modules/@angular/cdk/types/a11y.d.ts"],
      "@angular/cdk/overlay": ["./node_modules/@angular/cdk/types/overlay.d.ts"],
      "@angular/cdk/bidi": ["./node_modules/@angular/cdk/types/bidi.d.ts"],
      "@angular/cdk/scrolling": ["./node_modules/@angular/cdk/types/scrolling.d.ts"],
      "@angular/cdk/platform": ["./node_modules/@angular/cdk/types/platform.d.ts"],
      "@angular/cdk/coercion": ["./node_modules/@angular/cdk/types/coercion.d.ts"],
      "@angular/common/http": ["./node_modules/@angular/common/types/http.d.ts"],
      "@angular/platform-browser/animations": ["./node_modules/@angular/platform-browser/types/animations.d.ts"]
    }
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "setup-jest.ts"
  ]
}
